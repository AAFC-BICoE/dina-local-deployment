{
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1"
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "includes_as_nested": {
          "match_mapping_type": "object",
          "match":   "included",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "id_as_keywords": {
          "match_mapping_type": "string",
          "match":   "id",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "type_as_keywords": {
          "match_mapping_type": "string",
          "match":   "type",
          "mapping": {
            "type": "keyword"
          }
        }
      }
    ],
    "properties": {
      "data": {
        "properties": {
          "attributes": {
            "properties": {
              "createdBy": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "createdOn": {
                "type": "date"
              },
              "group": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "transactionNumber": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}