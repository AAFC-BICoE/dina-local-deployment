{
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1"
    }
  },
  "mappings": {
    "date_detection": false,
    "numeric_detection": false,
    "dynamic_templates": [
      {
        "includes_as_nested": {
          "match_mapping_type": "object",
          "match":   "included",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "id_as_keywords": {
          "match_mapping_type": "string",
          "match":   "id",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "type_as_keywords": {
          "match_mapping_type": "string",
          "match":   "type",
          "mapping": {
            "type": "keyword"
          }
        }
      }
    ],
    "properties": {
      "data": {
        "properties": {
          "type": {
            "type": "constant_keyword",
            "value": "storage-unit"
          },
          "attributes": {
            "properties": {
              "createdBy": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "createdOn": {
                "type": "date"
              },
              "group": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "name": {
                "type": "text",
                "fields": {
                  "autocomplete": {
                    "type": "search_as_you_type",
                    "max_shingle_size": 3
                  },
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "hierarchy": {
                "type": "nested",
                "properties": {
                  "uuid": {
                    "type": "keyword"
                  },
                  "name": {
                    "type": "keyword"
                  },
                  "rank": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "relationships": {
            "properties": {
              "parentStorageUnit": {
                "properties": {
                  "data": {
                    "properties": {
                      "type": {
                        "type": "text",
                        "fields": {
                          "keyword": {
                            "type": "keyword",
                            "ignore_above": 256
                          }
                        }
                      }
                    }
                  }
                }
              },
              "storageUnitChildren ": {
                "properties": {
                  "data": {
                    "properties": {
                      "type": {
                        "type": "text",
                        "fields": {
                          "keyword": {
                            "type": "keyword",
                            "ignore_above": 256
                          }
                        }
                      }
                    }
                  }
                }
              },
              "storageUnitType": {
                "properties": {
                  "data": {
                    "properties": {
                      "type": {
                        "type": "constant_keyword",
                        "value": "storage-unit-type"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "meta": {
        "properties": {
          "moduleVersion": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      }
    }
  }
}
