{
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1",
      "max_ngram_diff": "10"
    },
    "analysis": {
      "analyzer": {
        "ngram_analyzer": {
          "tokenizer": "ngram_tokenizer"
        },
        "keyword_lowercase_analyzer" : {
          "tokenizer": "keyword",
          "filter": [ "lowercase" ]
        },
        "keyword_lowercase_reverse_analyzer" : {
          "tokenizer": "keyword",
          "filter": [ "lowercase", "reverse" ]
        }
      },
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 10
        }
      }
    }
  },
  "mappings": {
    "date_detection": true,
    "numeric_detection": true,
    "dynamic_templates": [
      {
        "includes_as_nested": {
          "match_mapping_type": "object",
          "match":   "included",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "id_as_keywords": {
          "match_mapping_type": "string",
          "match":   "id",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "type_as_keywords": {
          "match_mapping_type": "string",
          "match":   "type",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "verbatim_as_text": {
          "match": "*verbatim*",
          "mapping": {
            "type": "text"
          }
        }
      }
    ],
    "properties": {
      "data": {
        "properties": {
          "type": {
            "type": "constant_keyword",
            "value": "metadata"
          },
          "attributes": {
            "properties": {
              "createdBy": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "createdOn": {
                "type": "date"
              },
              "acDigitizationDate": {
                "type": "date"
              },
              "xmpMetadataDate": {
                "type": "date"
              },
              "originalFilename": {
                "type": "text",
                "fields": {
                  "prefix": {
                    "type": "text",
                    "analyzer": "keyword_lowercase_analyzer",
                    "index_prefixes": {
                      "min_chars" : 1,
                      "max_chars" : 10
                    }
                  },
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "bucket": {
                "type": "keyword"
              },
              "fileIdentifier": {
                "type": "keyword"
              },
              "fileExtension": {
                "type": "keyword"
              },
              "dcFormat": {
                "type": "keyword"
              },
              "dcType": {
                "type": "keyword"
              },
              "xmpRightsWebStatement": {
                "type": "keyword"
              },
              "dcRights": {
                "type": "keyword"
              },
              "xmpRightsOwner": {
                "type": "keyword"
              },
              "xmpRightsUsageTerms": {
                "type": "keyword"
              },
              "acHashValue": {
                "type": "keyword"
              },
              "acCaption": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "managedAttributeValues": {
                "type": "object"
              }
            }
          },
          "relationships": {
            "properties": {
              "derivatives": {
                "properties": {
                  "data": {
                    "properties": {
                      "type": {
                        "type": "constant_keyword",
                        "value": "derivative"
                      }
                    }
                  }
                }
              },
              "acMetadataCreator": {
                "properties": {
                  "data": {
                    "properties": {
                      "type": {
                        "type": "constant_keyword",
                        "value": "person"
                      }
                    }
                  }
                }
              },
              "dcCreator": {
                "properties": {
                  "data": {
                    "properties": {
                      "type": {
                        "type": "constant_keyword",
                        "value": "person"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "meta": {
        "properties": {
          "moduleVersion": {
            "type": "text",
            "fields": {
              "keyword": {
                "type": "keyword",
                "ignore_above": 256
              }
            }
          }
        }
      }
    }
  }
}

