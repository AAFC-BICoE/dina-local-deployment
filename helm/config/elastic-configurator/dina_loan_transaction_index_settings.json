{
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "1"
    }
  },
  "mappings": {
    "date_detection": true,
    "numeric_detection": true,
    "dynamic_templates": [
      {
        "includes_as_nested": {
          "match_mapping_type": "object",
          "match": "included",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "id_as_keywords": {
          "match_mapping_type": "string",
          "match": "id",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "type_as_keywords": {
          "match_mapping_type": "string",
          "match": "type",
          "mapping": {
            "type": "keyword"
          }
        }
      },
      {
        "verbatim_as_text": {
          "match": "*verbatim*",
          "mapping": {
            "type": "text"
          }
        }
      }
    ],
    "properties": {
      "data": {
        "properties": {
          "type": {
            "type": "constant_keyword",
            "value": "transaction"
          },
          "attributes": {
            "properties": {
              "createdBy": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "createdOn": {
                "type": "date"
              },
              "group": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "transactionNumber": {
                "type": "text",
                "fields": {
                  "keyword": {
                    "type": "keyword",
                    "ignore_above": 256
                  }
                }
              },
              "openedDate": {
                "type": "date"
              }
            }
          }
        }
      },
      "included": {
        "type": "nested",
        "properties": {
          "attributes": {
            "properties": {
              "materialSamples": {
                "type": "keyword"
              }
            }
          }
        }
      }
    }
  }
}
